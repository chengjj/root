<div id="header_top">
 <div class="headerbox">
  <div id="logo"><a href="{{ front_page }}"><img src="{{ logo }}" width="142" height="50" /></a><sub>{{ site_slogan }}</sub></div>
  <div class="topright"><a href="{{ phone_download }}" class="phonedown" target="_blank">手机版</a><span>|</span>
  {% if current_user.id() %}
  <div class="loginafter"><span>{{ current_user.getUsername() }},您好！</span><a href="{{ user_profile_url }}" class="center" target="_blank">个人中心</a><a href="" class="center" target="_blank" style="display:none">商家中心</a><a class="message" href="" target="_blank" style="display:none">消息(3)</a><a class="center" href="{{ user_logout_url }}">退出</a></div>
  {% else %}
  <a href="{{ sina_login_url }}" class="sina" target="_blank">微博登录</a><a href="{{ user_login_url }}" class="login" target="_blank">登录</a><a href="{{ user_register_url }}" class="register" target="_blank">注册</a>
  {% endif %}
  </div>
 </div>
</div>
<div class="header_nav">
 <div class="navbox">
  <nav>
  <ul class="nav">
   <li class="nav_first"><a target="_blank" href="{{ front_page }}" class="{{ link_class.front }}">首页</a></li>
   <li><a target="_blank" href="{{ coupons_page }}" class="{{ link_class.coupon }}">周边优惠</a></li>
   <li><a target="_blank" href="{{ shares_page }}" class="{{ link_class.share }}">网购精选</a></li>
  </ul>
  </nav>
  <div class="navright">
   {{ share_add_link }}

   <div class="search_form">
     {{ search }}
   </div>

  </div>   
 </div>
