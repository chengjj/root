<article{{ attributes }} hover-class="open">
  {% if number > 3 %}
  <p class="teaser"><span>{{ number }}</span><b>{{ label_short }}</b>{{ coupon_label|truncate(8) }}</p>
  {% else %}
  <p class="highlight teaser"><span>{{ number }}</span><b>{{ label_short }}</b>{{ coupon_label|truncate(8) }}</p>
  {% endif %}
  <div class="openbox">
    <div class="img"><a target="_blank" href="{{ store_url }}">{{ picture }}</a></div>
    <div class="txt"><a target="_blank" href="{{ store_url }}">{{ coupon_label }}</a><p>{% if coupon %}{{ coupon.body.value }}{% endif %}</p></div>
  </div>
</article>
